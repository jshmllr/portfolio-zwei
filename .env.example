# Environment Configuration
NODE_ENV=production

# Base Path (important for GitHub Pages - replace with your repo name)
# Leave empty for root domain deployment
BASE_PATH=/Portfolio-Deax

# Animation Settings
ANIMATION_DURATION=250
GLITCH_MIN_DELAY=50
GLITCH_MAX_DELAY=250
GLITCH_ITERATIONS=6

# Image Settings
# For GitHub Pages, use relative paths or full GitHub Pages URLs
IMAGE_CDN_URL=https://username.github.io/Portfolio-Deax/img
IMAGE_QUALITY=90

# Performance Settings
ENABLE_TILT_EFFECT=true
ENABLE_GLITCH_EFFECT=true
ENABLE_PIECE_ANIMATIONS=true

# Debug Settings (should be false in production)
DEBUG_MODE=false
CONSOLE_LOGGING=false

# GitHub Pages specific
GITHUB_PAGES=true
CUSTOM_DOMAIN=  # If you're using a custom domain 